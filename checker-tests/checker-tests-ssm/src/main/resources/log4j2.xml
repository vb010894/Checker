<configuration>
    <Appenders>
        <Console name="out" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd} %-5p %c{1}:%L - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="${env:log.level}">
            <AppenderRef ref="out"/>
        </Root>
    </Loggers>
</configuration>